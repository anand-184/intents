<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rellayouttask">

    <View
        android:id="@+id/t1"
        android:layout_width="283dp"
        android:layout_height="168dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:background="#94A3DA" />

    <ImageView
        android:id="@+id/jk"
        android:layout_width="250dp"
        android:layout_height="137dp"
        android:layout_marginStart="-268dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/t1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/jk1" />

    <TextView
        android:id="@+id/b1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_below="@+id/jk"
        android:layout_marginStart="75dp"
        android:layout_marginTop="-20dp"
        android:background="#F89C07"
        android:text="@string/reasi"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/b2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_below="@+id/jk"
        android:layout_marginStart="170dp"
        android:layout_marginTop="-20dp"
        android:background="#F89C07"
        android:text="@string/kathua"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/b3"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_below="@+id/jk"
        android:layout_marginStart="265dp"
        android:layout_marginTop="-20dp"
        android:background="#F89C07"
        android:text="@string/doda"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jk"
        android:layout_marginStart="75sp"
        android:layout_marginTop="90dp"
        android:background="#C86D6D">

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/b1"
            android:layout_marginTop="20sp"
            android:text="@string/comments"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/cicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20sp"
            android:layout_toEndOf="@+id/comment"
            app:srcCompat="@drawable/baseline_comment_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jk"
        android:layout_marginStart="225sp"
        android:layout_marginTop="90dp"
        android:background="#C86D6D">

        <TextView
            android:id="@+id/Donation"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/b1"
            android:layout_marginTop="20sp"
            android:text="@string/donation"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/dicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20sp"
            android:layout_toEndOf="@+id/comment"
            app:srcCompat="@drawable/baseline_attach_money_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginStart="75sp"
        android:layout_marginTop="40dp"
        android:background="#C86D6D">

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20sp"
            android:text="     Contact"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/coicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20sp"
            android:layout_toEndOf="@+id/comment"
            app:srcCompat="@drawable/baseline_call_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginStart="225sp"
        android:layout_marginTop="40dp"
        android:background="#C86D6D">

        <TextView
            android:id="@+id/enquiry"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/layout2"
            android:layout_marginTop="20sp"
            android:text="   Enquiry"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/enicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20sp"
            android:layout_toEndOf="@+id/comment"
            app:srcCompat="@drawable/baseline_quiz_24" />
    </LinearLayout>


</RelativeLayout>